# Loman AI Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://loman:loman_secret@postgres:5432/loman_ai
POSTGRES_USER=loman
POSTGRES_PASSWORD=loman_secret
POSTGRES_DB=loman_ai

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# JWT / AUTH
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# TWILIO
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567

# =============================================================================
# DEEPGRAM (STT - Speech to Text)
# =============================================================================
DEEPGRAM_API_KEY=your_deepgram_api_key

# =============================================================================
# ELEVENLABS (TTS - Text to Speech)
# =============================================================================
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# =============================================================================
# LLM PROVIDERS
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_DEFAULT_MODEL=gpt-4-turbo

# Anthropic
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ANTHROPIC_DEFAULT_MODEL=claude-3-sonnet-20240229

# Google Gemini
GEMINI_API_KEY=your_gemini_api_key
GEMINI_DEFAULT_MODEL=gemini-1.5-pro

# Azure OpenAI (optional)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Ollama (local models)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_DEFAULT_MODEL=llama2

# =============================================================================
# DEFAULT LLM CONFIGURATION
# =============================================================================
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4-turbo
FALLBACK_LLM_PROVIDER=anthropic
FALLBACK_LLM_MODEL=claude-3-sonnet-20240229

# =============================================================================
# CALL GATEWAY (RUST)
# =============================================================================
CALL_GATEWAY_HOST=0.0.0.0
CALL_GATEWAY_PORT=8080
CALL_GATEWAY_WS_PATH=/media-stream
API_BASE_URL=http://api:8000

# =============================================================================
# API (PYTHON)
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# DASHBOARD (REACT)
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8080

# =============================================================================
# OBSERVABILITY
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# RECORDING / STORAGE
# =============================================================================
RECORDINGS_STORAGE=local
RECORDINGS_PATH=/app/recordings

# S3 (optional for production)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=loman-recordings
# AWS_REGION=us-east-1

# =============================================================================
# CONVERSATION SETTINGS
# =============================================================================
MAX_CALL_DURATION_SECONDS=600
SILENCE_TIMEOUT_SECONDS=10
BARGE_IN_ENABLED=true
RECORDING_CONSENT_REQUIRED=true

